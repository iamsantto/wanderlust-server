{
    "extends": "eslint:recommended",
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
        "arrow-parens": [ 2, "as-needed" ],
        "arrow-spacing": [ 2 ],
        "indent": [ 2, 2 ],
        "no-console": [ 0 ],
        "no-duplicate-imports": [ 2 ],
        "no-multiple-empty-lines": [ 2, { "max": 1, "maxBOF": 0, "maxEOF": 1 } ],
        "quotes": [ 2, "single" ],
        "semi": [ 2, "never" ],
        "strict": [ 2, "never" ]
    }
  }
